extends base.pug

block content 
    //- h1 This is the tour overview 
    //- <main class="main">
    //-   <div class="card-container">
    main.main 
        .card-container 

            //- Here we are Looping through each tour in tourModel.find() :::::::::::::::::::::::::::::::::
            each tour in tours 
                .card
                    .card__header
                        .card__picture
                            .card__picture-overlay &nbsp;
                            img.card__picture-img(src=`/img/tours/${tour.imageCover}`, alt=`${tour.name}`)
                        h3.heading-tertirary
                            //- span The Forest Hiker   
                            span=tour.name

                    .card__details
                        h4.card__sub-heading= `${tour.difficulty} ${tour.duration}-day tour`
                        //- p.card__text Breathtaking hike through the Canadian Banff National Park
                        p.card__text= tour.summary
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-map-pin')
                            //- span Banff, Canada
                            span= tour.startLocation.description
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-calendar')
                            //- span April 2021
                            span= tour.startDates[0].toLocaleString('en-us',{month:'long' , year:'numeric'})
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-flag')
                            //- span 3 stops
                            span= `${tour.locations.length} stops`
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-user')
                            //- span 25 people
                            span= `${tour.maxGroupSize} people`


                    .card__footer
                        p
                            //- span.card__footer-value $297
                            span.card__footer-value=`$${tour.price}`
                            space=' '
                            span.card__footer-text per person
                        p.card__ratings
                            //- span.card__footer-value 4.9
                            span.card__footer-value=tour.ratingsAverage
                            //- This is | a space ::::::::::::::::::::::::::::::::
                            | 
                            //- span.card__footer-text rating (21)
                            span.card__footer-text= `rating (${tour.ratingQuantity})`
                        //- a.btn.btn--green.btn--small(href='#') Details
                        //- rendering the tour pages using the slug not by their ID, becasue it makes the url much nicerrrrrrrr.
                        a.btn.btn--green.btn--small(href=`/tour/${tour.slug}`) Details